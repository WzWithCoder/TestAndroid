<resources>

    <declare-styleable name="NestScrollLayout">
        <attr name="head_id" format="reference" />
        <attr name="content_id" format="reference" />
    </declare-styleable>
    <attr name="radius" format="dimension" />
    <declare-styleable name="RoundLayout">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_fore" format="boolean" />
        <attr name="radius"/>
        <attr name="left_top_radius" format="dimension" />
        <attr name="right_top_radius" format="dimension" />
        <attr name="left_bottom_radius" format="dimension" />
        <attr name="right_bottom_radius" format="dimension" />
        <attr name="clip_background" format="boolean" />
        <attr name="shape" format="enum">
            <enum name="circle" value="1" />
            <enum name="semicircle" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="LineView">
        <attr name="dashGap" format="dimension" />
        <attr name="dashWidth" format="dimension" />
        <attr name="dashColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CellEditText">
        <attr name="focusColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderSize" format="dimension" />
        <attr name="borderRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MarqueeViewStyle">
        <attr name="FlipInterval" format="integer|reference" />
        <attr name="AnimDuration" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="LoadingLayout">
        <attr name="empty_page_layout" format="reference" />
        <attr name="failed_page_layout" format="reference" />
        <attr name="loading_page_layout" format="reference" />
        <attr name="failed_text_id" format="reference" />
        <attr name="empty_text_id" format="reference" />
        <attr name="empty_image_id" format="reference" />
        <attr name="retry_button_id" format="reference" />
    </declare-styleable>

    <declare-styleable name="ArrowView">
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="color" />
        <attr name="about" format="enum">
            <enum name="up" value="0" />
            <enum name="down" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>
        <attr name="style" format="enum">
            <enum name="stroke" value="1" />
            <enum name="fill" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GridGroup">
        <attr name="numColumns" format="integer" />
        <attr name="dividerColor" format="color" />
        <attr name="dividerSize" format="dimension" />
        <attr name="horizontalSpacing" format="dimension" />
        <attr name="verticalSpacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FoldTextView">
        <attr name="max_lines" format="integer|reference" />
        <attr name="ellipsize_label" format="string|reference" />
        <attr name="ellipsize_color" format="color|reference" />
        <attr name="action_label" format="string|reference" />
        <attr name="action_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="SnapIndicator">
        <attr name="widthOffset" format="dimension" />
        <attr name="space" format="dimension" />
        <attr name="size" format="dimension" />
        <attr name="color" format="color" />
    </declare-styleable>
</resources>
